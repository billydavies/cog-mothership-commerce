{% extends 'Message:Mothership:ControlPanel::_templates/left_sidebar' %}

{% block sidebar %}
	{{ render(controller('Message:Mothership:Commerce::Controller:Sidebar#index', {'productID':product.id}))}}
{% endblock %}

{% block main %}

<hgroup class="title">
	<h1>Create a product</h1>
</hgroup>

<div class="container-products create-product">	
	{{ form_start(form) }}
		{{ form_row(form.name) }}
		{{ form_row(form.display_name) }}
		{{ form_row(form.short_description) }}

		<button type="submit" class="button small save">Create product</button>
	{{ form_end(form) }}
</div>
{% endblock %}