{% extends '::order/order' %}

{% block main %}
	{{ render(controller('::Controller:Order:Tabs#create', { 'orderId': order.id } )) }}

	<section class="container-content">
		<section class="repeatable-group">
				<h2>Items</h2>
				{% for item in items %}
					<div class="container">
						<section class="group">
							<h1 class="title">
								<a href="{{ url('ms.commerce.product.edit', {productID: item.projectId}) }}" data-live>{{ item.productName }}</a>
							</h1>
							<ul class="file-details">
								<li><span>Brand </span>{{ item.brand }}</li>
								<li><span>Options </span>{{ item.options }}</li>
								<li><span>Gross </span> {{ item.gross }}</li>
								<li><span>SKU </span> {{ item.sku }}</li>
								<li><span>Personalized </span> {{ item.isPersonalised }}</li>

								<ul>
									<li><span>List-Price </span> item.listPrice</li>
									<li><span>Net </span> item.net</li>
									<li><span>Discount </span> item.discount</li>
									<li><span>Tax </span> item.tax</li>
									<li><span>Taxrate </span> item.taxrate</li>
									<li><span>Gross </span> item.gross</li>
									<li><span>RRP </span> item.rrp</li>
								</ul>

								<ul>
									<li><span>Weight</span> item.weight</li>
									<li><span>Barcode</span> item.barcode</li>
									<li><span>SKU</span> item.sku</li>
								</ul>

								<ul>
									<li><span>Sender Name</span> item.senderName</li>
									<li><span>Recipient Name</span> item.recipientName</li>
									<li><span>Recipient E-Mail</span> item.recipientEmail</li>
									<li><span>Message</span> item.recipientMessage</li>
								</ul>
							</ul>
						</section>
					</div>
				{% endfor %}
			</section>
	</section>
{% endblock %}