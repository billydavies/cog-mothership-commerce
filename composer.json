{
	"name": "message/cog-mothership-commerce",
	"description": "Cog module for commerce building blocks in Mothership",
	"keywords": ["commerce", "mothership", "order", "orders", "products", "money", "cog"],
	"homepage": "http://message.co.uk",
	"license": "proprietary",
	"authors": [
		{
			"name" : "The Message Development Team",
			"email": "dev@message.co.uk"
		}
	],
	"support": {
		"wiki"  : "http://server.local/wiki/projects/cog",
		"issues": "http://github.com/messagedigital/cog-mothership-commerce/issues"
	},
	"autoload": {
		"psr-4": {
			"Message\\Mothership\\Commerce\\"      : "src",
			"Message\\Mothership\\Commerce\\Test\\": "tests"
		}
	},
	"repositories": [
		{
			"type": "composer",
			"url" : "http://packages.message.co.uk"
		}
	],
	"require": {
		"php": ">=5.4.0",

		"message/cog"                        : "~3.12",
		"message/cog-mothership-user"        : "~3.4",
		"message/cog-imageresize"            : "~1.0",
		"message/cog-mothership-file-manager": "~2.0",
		"message/cog-mothership-cp"          : "~2.2",

		"domisys/image_barcode2"             : "3.0.0"
	},
	"require-dev": {
		"mockery/mockery" : "dev-master@dev"
	},

	"suggest": {
		"message/cog-mothership-reports" : "Module for displaying reports"
	}
}
