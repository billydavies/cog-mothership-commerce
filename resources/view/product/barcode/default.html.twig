{% extends 'Message:Mothership:Commerce::product:barcode:template' %}

{% block content %}
	<div class="page">
		{% for key, barcode in barcodes %}
			<div class="label">
				<hgroup>
					<h2>{{ barcode.brand }}</h2>
					<h3>{{ barcode.name }}</h3>
					<p>{{ barcode.text }}</p>
				</hgroup>

				<p class="price">{{ barcode.price | price(barcode.currency) }}</p>
				<img src="{{ barcode.url }}" />
			</div>

			{% if (key + 1) == pageBreak %}
				</div>
				<div class="page-break"></div>
				<div class="page">
				{% set pageBreak = pageBreak + labelsPerPage %}
			{% endif %}
		{% endfor %}
	</div>
{% endblock %}