{% extends 'Message:Mothership:ControlPanel::_templates/cp' %}
{% block content %}
	<hgroup class="title">
		<h1>Products</h1>
		<div class="controls">
			<a href="{{ url('ms.commerce.product.create')}}" class="button small create product" data-live>Add a new product</a>
			<a href="#" class="button small create product" data-live>Import products</a>
		</div>
	</hgroup>
	<div class="container-content">
		<table class="table-filter products">
			<colgroup>
				<col width="100">
                <col width="50">
                <col>
                <col>
                <col width="175">
                <col width="100">
            </colgroup>
			<thead>
				<tr>
					<th>ID</th>
					<th class="disable">Photo</th>
					<th>Name</th>
					<th>Category</th>
					<th class="disable"></th>
					<th class="disable"></th>
				</tr>
			</thead>
			<tfoot>
				<tr>
					<th>ID</th>
					<th>-</th>
					<th>Name</th>
					<th>Catagory</th>
					<th class="a-center"><a href="#" class="clear-filters">Clear filters</a></th>
					<th>-</th>
				</tr>
			</tfoot>
			<tbody>
				{% for product in products %}
					<tr>
						<td>{{ product.id }}</td>
						<td>{{ getResizedImage(product.getImage(), 50, 50) }}</td>
						<td><a href="{{ url('ms.commerce.product.edit.attributes', {productID:product.id}) }}" class="click">{{ product.defaultName }}</a></td>
						<td>{{ product.brand }}</td>
						<td>
							<a href="{{ url('ms.commerce.product.edit.attributes', {productID:product.id}) }}" class="button small">Edit</a>
							<a href="#" class="button small">Duplicate</a>
						</td>
						<td>
							<a href="{{ url('ms.commerce.product.delete', {productID:product.id}) }}" class="button small remove">Delete</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}