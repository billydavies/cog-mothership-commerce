{% extends 'Message:Mothership:ControlPanel::_templates/left_sidebar' %}

{% block main %}
	<h1>Search Results for '{{ terms }}'</h1>

	{% if products | length > 0 %}
		<table>
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
				</tr>
			</thead>
			<tbody>
				{% for product in products %}
					<tr>
						<td>
							<a href="{{ url('ms.commerce.product.edit.attributes.action', {'productID' : product.id}) }}">
								{{ product.id }}
							</a>
						</td>
						<td>
							<a href="{{ url('ms.commerce.product.edit.attributes.action', {'productID' : product.id}) }}">
								{{ product.name }}
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% else %}
		<p>No products found</p>
	{% endif %}
{% endblock %}
