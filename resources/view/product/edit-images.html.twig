{% extends 'Message:Mothership:ControlPanel::_templates/left_sidebar' %}

{% block sidebar %}
	{{ render(controller('Message:Mothership:Commerce::Controller:Product:Sidebar#index', {'productID':product.id}))}}
{% endblock %}

{% block main %}

<hgroup class="title">
		<h1>Editing Images</h1>
</hgroup>

{{ render(controller('Message:Mothership:Commerce::Controller:Product:Menu#index', {'productID':product.id}))}}

<section class="container-content">
<ul>
	{% for image in product.images %}
		<li>
			<img src="{{ resize(image.file.file.getPublicUrl, 200, 200) }}" />
			<ul>
				<li>{{ 'ms.commerce.product.image.type.label'|trans }} {{ image.type }}</li>
				<li>{{ 'ms.commerce.product.image.option.name.label'|trans }} {{ image.optionName }}</li>
				<li>{{ 'ms.commerce.product.image.option.value.label'|trans }} {{ image.optionValue }}</li>
			</ul>
		</li>
	{% endfor %}
</ul>
	{{ form_start(form) }}
		{{ form_rest(form) }}
		<button type="submit" class="button small save" id="save-content">
			{{ 'ms.commerce.product.button.save'|trans }}
		</button>
	{{ form_end(form) }}

</section>

{% endblock %}
