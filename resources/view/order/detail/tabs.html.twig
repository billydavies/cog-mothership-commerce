<div class="topbar">
	<ul class="tabs">
	{% for item in items %}
		<li class="{{ item.classes|join(' ') }}"><a href="{{ url(item.target, {orderID: order.id }) }}">{{ item.label|trans }}</a></li>
	{% endfor %}
	</ul>
	<div class="controls">
		{% if isCancellable %}
		    <a class="button small cancel" href="{{ url('ms.commerce.order.cancel', {'orderID': order.id }) }}" data-modal-open>
		    	{{ 'ms.commerce.order.order.cancel' | trans }}
		    </a>
		{% elseif order.status.name == 'Cancelled' %}
			<span class="button small cancel disabled">
		    	{{ 'ms.commerce.order.order.cancelled' | trans }}
			</span>
		{% else %}
			<span class="button small cancel disabled">
		    	{{ 'ms.commerce.order.order.cancel-disabled' | trans }}
			</span>
		{% endif %}
	</div>
</div>