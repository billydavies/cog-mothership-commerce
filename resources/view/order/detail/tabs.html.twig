<div class="topbar">
	<ul class="tabs">
	{% for item in items %}
		<li class="{{ item.classes|join(' ') }}"><a href="{{ url(item.target, {orderID: orderID }) }}">{{ item.label|trans }}</a></li>
	{% endfor %}
	</ul>
	<div class="controls">
		{% if isCancellable %}
		    <a class="button small cancel" href="{{ url('ms.commerce.order.cancel', {'orderID': orderID }) }}" data-modal-open>
		    	Cancel
		    </a>
	    {% else %}
			<span class="button small cancel disabled">
		    	Cancelled
		    </span>
	    {% endif %}
	</div>
</div>