<section class="group">
	<h2 class="title">
		{{ payment.method.displayName }},
		Created by {{ payment.authorship.createdBy }}
		at {{ payment.authorship.createdAt|date }}
	</h2>
	<div class="content">
		<dl class="order-details">
			<dt>{{ 'ms.commerce.order.payment.method'|trans }}</dt>
				<dd>{{ payment.method.displayName }}</dd>
			<dt>{{ 'ms.commerce.order.payment.amount'|trans }}</dt>
				<dd>{{ payment.amount|price(order.currencyID) }}</dd>
			<dt>{{ 'ms.commerce.order.payment.reference'|trans }}</dt>
				<dd>{{ payment.reference }}</dd>
		</dl>
	</div>
</section>