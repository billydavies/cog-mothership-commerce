<h2 class="title">Created by {{ note.authorship.createdBy }} at {{ note.authorship.createdAt|date }}</h2>
<div class="content-wrap">
	<ul class="order-details">
		<li><span>Note</span>{{ note.note }}</li>
		<li>
			<span>{{ 'ms.commerce.order.note.customer-notified'|trans }}</span>
			{{ note.customerNotified }}
		</li>
		<li>
			<span>{{ 'ms.commerce.order.note.raised-from'|trans }}</span>
			{{ note.raisedFrom }}
		</li>
	</ul>
</div>

<div class="content-wrap">
	{{ form_start(createNoteForm) }}
		{{ form_rest(createNoteForm) }}
		<button type="submit" class="button save">Add note to order</button>
	{{ form_end(createNoteForm) }}
</div>
